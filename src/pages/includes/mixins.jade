- var title = "Jet Computers - Services for PCs, Macs, Linux, Android, and iOS!"
- var desc = "We've got the St Lucie and surrounding areas covered from desktop to smartphone; with expert repair, servicing, custom builds, and much more! Repairs start from just $39.99!"
- var keywords = "computer, computers, computer repair, computer service, computer repairs, computer services, tablet, tablets, tablet repair, tablet service, tablet services, mobile, mobiles, mobile repair, mobile service, mobile repairs, mobile services, mac, macs, mac repair, mac repairs, mac service, mac services, virus, viruses, virus cleaning, virus removal, spyware, spyware cleaning, spyware removal, malware, malware cleaning, malware removal, cleaning, tuneup, removal, installation, windows, osx, linux, unix, freebsd, android, ios, security, computer security, online security"
- var subject = "Computer repair and services"
- var url = "https://jetcomputers.us"

mixin meta(page, ts)
  meta(charset="utf-8")
  title #{page} - Jet Computers
  meta(http-equiv="Content-Language" content="en")

  //- Begin search tags
  meta(name="title" content="#{page} - #{title}")
  meta(name="description" content="#{desc}")
  meta(name="keywords" content="#{keywords}")
  meta(name="subject" content="#{subject}")
  meta(name='revised' content="#{ts}")
  link(rel="canonical" href="#{url}")
  link(rel="alternate" href="#{url}" hreflang="x-default")
  link(rel="publisher" href="https://google.com/+JetComputersPortSaintLucie")
  meta(name="robots" content="index, follow")
  //- End search tags

  //- Begin social tags
  meta(property="og:title" content="#{page}")
  meta(property="og:type" content="website")
  meta(property="og:image" content="#{url}/img/brand/mini_logo.png")
  meta(property="og:url" content="#{url}")
  meta(property="og:description" content="#{desc}")
  meta(property="twitter:card" content="summary")
  meta(property="twitter:url" content="#{url}")
  meta(property="twitter:title" content="#{page}")
  meta(property="twitter:description" content="#{desc}")
  meta(property="twitter:image" content="#{url}/img/brand/mini_logo.png")
  //- End social tags

  //- Begin mobile tags
  meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=2.5, user-scalable=yes, minimal-ui")
  meta(name="apple-mobile-web-app-title" content="Jet Computers")
  meta(name="apple-mobile-web-app-capable" content="yes")
  meta(name="apple-touch-fullscreen" content="yes")
  meta(name="format-detection" content="telephone=no")
  link(rel="apple-touch-icon" href="touch-icon-plus.png" sizes="180x180")
  link(rel="apple-touch-icon" href="touch-icon-retina.png" sizes="76x76 152x152")
  link(rel="apple-touch-icon" href="touch-icon.png" sizes="120x120")
  link(rel="apple-touch-icon" href="touch-icon.png" type="image/png")
  link(rel="apple-touch-startup-image" href="/startup.png")
  link(rel="shortcut icon" href="img/mobile.ico")
  //- End mobile tags

mixin redirect(page)
  meta(http-equiv="refresh" content="0; #{url}/##{page}")
