doctype html
html(lang="en")
  head
    //- Pull in common tags
    include ./includes/mixins.jade
    +meta('Home')
    include ./includes/base.jade
    //- Begin styles
    link(rel="stylesheet" href="css/vendor.css")
    link(rel="stylesheet" href="css/main.css")
    <!--[if IE 9]>
    style.
      html { background-attachment: fixed; }
    <![endif]-->
